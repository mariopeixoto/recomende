<ivysettings>
  <settings defaultResolver="defaultChain"/>
  <resolvers>
    <chain name="defaultChain">
      <filesystem name="m2local" m2compatible="true">
        <artifact pattern="${user.home}/.m2/repository/[organisation]/[module]/[revision]/[module]-[revision].[ext]" />
      </filesystem>
      <ibiblio name="ibiblio" m2compatible="true"/>
      <ibiblio name="codehaus" root="http://repository.codehaus.org/" m2compatible="true"/>
      <ibiblio name="jboss" root="http://repository.jboss.org/maven2/" m2compatible="true"/>
      <ibiblio name="java.net2" root="http://download.java.net/maven/2/" m2compatible="true"/>
      <ibiblio name="reflections-repo" root="http://reflections.googlecode.com/svn/repo" m2compatible="true"/>
    </chain>
  </resolvers>
</ivysettings>